<h1 class="text-center mt-4">Article Listing</h1>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow bg-white rounded">
        <div class="card-header font-italic">
          by <%= @article.user.username%>
          <%= link_to gravatar_for(@article.user), @article.user %>
                    <% if @article.categories.any? %>
            <div class="mt-2"><%= render @article.categories %></div> 
          <% end %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to @article.title, article_path(@article), class: "text-success" %></h5>
          <div class="card-text text-left"><%= simple_format(@article.description)%></div>
          <% if logged_in? && @article.user == current_user || current_user.admin? %>
            <%= link_to 'Edit', edit_article_path(@article), class:"btn btn-outline-info"%>
            <%= link_to 'Delete', article_path(@article), method: :delete,class:"btn btn-outline-danger", data: { confirm: "Are you sure?"}  %>
          <% end %>
        </div>
        <div class="card-footer text-muted">
          <small>created at <%= time_ago_in_words(@article.created_at)%> ago, edited <%= time_ago_in_words(@article.updated_at)%></small>
        </div>
      </div>
    </div>
  </div>
</div>
